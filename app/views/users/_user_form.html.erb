<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>><br>
    <% end %>
<% end %>

<%= form_for @user, html: {class: "ui form" } do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :username %><br>
    <%= f.text_field :username %><br>
    <%= f.label :password %> (Must enter password) <br>
    <%= f.password_field :password %><br>
    <%= f.label :email %><br>
    <%= f.text_field :email %><br>
    <%= f.label :age %><br>
    <%= f.number_field :age %><br>
    <%= f.label :gender %><br>
    <%= f.text_field :gender %><br><br>
    <%= f.select(:role, User.roles.keys.map{|role| role}) %><br><br><br>
    <%= f.submit "Submit", class: "small ui violet button" %>
<% end %>
