<h1>User Sign up</h1>

<% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
    <%= message %>><br>
    <% end %>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>
    <%= f.label :gender %>
    <%= f.text_field :gender %><br><br>
    <%= f.select(:role, User.roles.keys.map{|role| role }) %><br><br><br>
    <%= f.submit "Sign Up" %>
<% end %>

<br>
<%= link_to "Back to Homepage", root_path %>