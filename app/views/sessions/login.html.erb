<h1>Login</h1>

<div class = "error"> <%= flash[:login_error] %> </div>

<%= form_tag login_path html: {class: "ui form" } do %>
    <%= label_tag :username %> <br>
    <%= text_field_tag :username %> <br>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %> <br> <br>
    <%= submit_tag "Log In", class: "small ui violet button"%>
<% end %>
