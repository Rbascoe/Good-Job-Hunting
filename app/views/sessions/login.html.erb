<h1>Login</h1>

<div class = "error"> <%= flash[:login_error] %> </div>

<%= form_tag login_path do %>
    <%= label_tag :username %> <br>
    <%= text_field_tag :username %> <br>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %> <br>
    <%= submit_tag "Log In" %>
<% end %>
<br>
<%= link_to "Back to Homepage", root_path %>
